<h3 class="heading">お題：<%= link_to board.title, admin_board_path(board), class: "link" %></h3>
<% if board.image.attached? %>
  <div class="text-center my-3">
    <%= link_to board_path(board), class: "image-link" do %>
      <%= image_tag board.image, class: "picture-image" %>
    <% end %>
  </div>
<% end %>

<div class="mb-3">
  <%= link_to "お題出題者：#{board.member.name}", admin_member_path(board.member), class: "tag" %>
  <span class="detail_tag"><%= time_ago_in_words(board.created_at) %>前に出題</span>
  <span class="detail_tag">投稿数：<%= board.posts.count %></span>
  <span class="detail_tag">閲覧数：<%= board.impressionist_count(:filter=>:session_hash) %></span>
</div>
<% board.tag_list.each do |tag| %>
  <span class="no_link_tag"><%= tag %></span>
<% end %>