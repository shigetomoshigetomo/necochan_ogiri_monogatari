<div class="row mt-3">
  <div class="col-lg-7">
    <div class="box">
      <%= render "public/boards/show", board: @post.board %>
      <%= render "public/posts/show", post: @post, board: @board %>
      <div class="d-flex mt-2">
        <%= render "public/favorites/favorite", obj: @board, post: @post %>
        <%= render "public/unlikes/unlike", obj: @board, post: @post %>
      </div>
    </div>
  </div>
  <div class="col-lg-4 offset-lg-1">
    <%= render "public/members/info" %>
    <%= render "public/boards/all_tag", tags: @tags %>
  </div>
</div>