<div class="px-5 mx-5 row">
  <div class="col-11">
    <%= form_with model:@member, url: members_path, method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :氏名, class: "col-3" %>
        <%= f.text_field :name, autocomplete: "name", class: "form-control col-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :email, 'メールアドレス', class: "col-3" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control col-3" %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "変更を保存", class: "btn btn-success col-4 offset-2" %>
      </div>
    <% end %>
  </div>
</div>