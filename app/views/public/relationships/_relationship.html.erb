<% if current_member.following?(member) %>
  <%= link_to "フォロー中", member_relationships_path(member), method: :delete, remote: true, class:"btn btn-info btn-sm" %>
<% else %>
  <%= link_to "フォローする", member_relationships_path(member), method: :post, remote: true, class:"btn btn-success btn-sm" %>
<% end %>