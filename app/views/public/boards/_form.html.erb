<%= form_with model: obj do |f| %>
  <div class="form-group">
    <div><%= f.label :お題 %><span class="attention ml-2">必須!</span></div>
    <%= f.text_field :title, class: 'form-control', placeholder: "50文字以内" %>
  </div>
  <div class="form-group">
    <%= f.label :タグ（半角カンマで区切ってください） %>
    <%= f.text_field :tag_list, value: obj.tag_list.join(','), class:"form-control", placeholder: "(例)写真,動物" %>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "image_input_btn" do %>
      <%= f.file_field :image, accept: "image/*", class: "image-form" %>画像も投稿　<i class="fas fa-camera"></i>
    <% end %>
  </div>
  <div class="form-group text-center">
    <%= f.submit "送信", class: 'btn btn-outline-light' %>
  </div>
<% end %>