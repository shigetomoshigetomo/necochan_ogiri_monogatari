<div class="box row">
  <div class="col-lg-4 text-center">
    <%= image_tag @item.image.variant(resize: "250").processed %>
  </div>
  <table class="table table-borderless col-lg-7 offset-lg-1 text-white">
    <tbody>
      <tr>
        <td>アイテム名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>アイテム説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>価格</td>
        <td><%= @item.price %>マネー</td>
      </tr>
      <tr>
        <td>経験値</td>
        <td><%= @item.having_exp %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="row mt-5">
  <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-outline-light btn-lg mx-auto" %>
</div>