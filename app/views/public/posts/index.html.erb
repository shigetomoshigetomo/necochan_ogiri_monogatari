<div class="text-center mb-3">
  <%= image_tag "post.png" %>
</div>

<div class="row mt-3">
  <div class="col-lg-7">
    <div class="text-center mb-3">
      <div class="btn-group" role="group" aria-label="Basic example">
        <%= link_to "人気", posts_index_path(sort: "popular"), class: "btn btn-outline-light btn-lg" %>
        <%= link_to "最新", posts_index_path(sort: 'created_at DESC'), class: "btn btn-outline-light btn-lg" %>
      </div>
    </div>

    <% @posts.each do |post| %>
      <div class="box mb-3">
        <%= render "public/boards/show", board: post.board %>
        <%= render "show", board: post.board, post: post %>
        <div class="d-flex mt-2">
          <div id="favorite_buttons_<%= post.board.id %>_<%= post.id %>">
            <%= render "public/favorites/favorite", board: post.board, post: post %>
          </div>
          <%= render "public/unlikes/unlike", obj: post.board, post: post %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-lg-4 offset-lg-1">
    <%= render "public/members/info" %>
    <%= render "public/boards/all_tag", tags: @tags %>
  </div>
</div>