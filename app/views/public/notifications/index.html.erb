<div class="text-center mb-3">
  <h3 class="page-title">お知らせ</h3>
</div>

<div class="text-center mb-2"><%= link_to "プロフィールへ", member_path(current_member), class: "btn btn-info btn-sm" %></div>
<% if @notifications.any? %>
  <% @notifications.each do |notification| %>
    <div class="box mb-2">
      <%= image_tag notification.visitor.get_profile_image, class: "rounded-circle member-mini-image" %>
      <%= notification_form(notification) %>
      <div class="text-right">
        <span class="detail_tag"><%= time_ago_in_words(notification.created_at) %>前</span>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="mx-auto">
      <%= paginate @notifications, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
<% else %>
  <div class="text-center">
    <p><i class="fas fa-paw"></i>を押されたり<br>フォローされると通知がきます　<i class="fas fa-cat"></i></p>
  </div>
<% end %>