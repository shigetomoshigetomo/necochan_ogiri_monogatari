<% if current_member.name == "ゲスト" %>
  <h5 class="blink text-center"><i class="fa fa-exclamation-circle"></i>ゲストの方はお買い物できません</h5>
<% end %>

<div class="text-center">
  <div class="box shop my-3 d-inline-block pt-3">
    <%= image_tag "shop.png", class: "not-link-image" %>
    <div class="welcome-message box p-4">いらっしゃいませ、<%= current_member.name %>さん！なんでもありますよ！</div>
    <div class="my-money"><%= current_member.money.to_i %>　マネー</div>
  </div>
</div>

<div class="text-center">
  <div class="btn-group" role="group">
    <% @genres.each do |genre| %>
      <%= link_to genre.name, items_path(shop: genre.id), class: "btn btn-outline-light" %>
    <% end %>
  </div>
</div>

<div class="text-center my-2">
  <%= link_to "あなたのお買い物履歴", member_shoppings_path(current_member), class: "btn btn-outline-light btn-sm" %>
</div>

<div class="text-center">
  <div class="box">
    <% @items.each do |item| %>
      <%= link_to(item_path(item), class: "link") do %>
        <div class="row px-lg-5">
          <h5 class="col-md-8 text-left py-1">　<i class="fas fa-caret-left"></i>　<%= item.name %></h5>
          <h5 class="col-md-4 text-left py-1">　<%= item.price %><span class="small">マネー</span></h5>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
