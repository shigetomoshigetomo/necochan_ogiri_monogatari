<%= form_with model:@board do |f| %>
  <div class="form-group">
    <%= f.label :お題 %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :画像 %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿", class: 'btn btn-success' %>
  </div>
<% end %>