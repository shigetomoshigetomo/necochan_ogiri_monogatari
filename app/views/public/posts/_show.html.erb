<h3 class="heading">答え：<%= link_to post.content, board_post_path(board, post), class: "link" %></h3>
<% if post.image.attached? %>
  <div class="text-center my-3">
    <%= link_to board_post_path(board, post), class: "image-link" do %>
      <%= image_tag post.image, class: "picture-image" %>
    <% end %>
  </div>
<% end %>
<%= link_to "回答者：#{post.member.name}", member_path(post.member), class: "tag" %>
<span class="detail_tag"><%= time_ago_in_words(post.created_at) %>前に回答</span>