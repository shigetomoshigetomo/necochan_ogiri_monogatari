<h3>ジャンル</h3>

<div class="box mb-5 row">
  <div class="mx-auto">
    <%= form_with model:@genre, url: "/admin/genres", method: :post do |f| %>
      <div class="field form-group">
        <%= f.label :ジャンル名, class:"mr-2" %>
        <%= f.text_field :name, placeholder: "ジャンル名", class:"genre-form" %>
        <%= f.submit "新規登録", class:"btn btn-success ml-3" %>
      </div>
    <% end %>
  </div>
</div>

<table class="table table-light">
  <thead class="thead-light">
    <th>ジャンル名</th>
    <th>商品数</th>
    <th></th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.items.count %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>