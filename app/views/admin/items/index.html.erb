<div class="text-center mb-3">
  <h3 class="page-title">アイテム一覧</h3>
</div>

<div class="button004 my-3">
  <%= link_to new_admin_item_path do %>
    <h5>アイテム追加　<i class="fas fa-plus"></i></h5>
  <% end %>
</div>

<div class="text-right mb-2">
  <%= form_tag(admin_items_path, method: :get) do %>
    <%= select_tag :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    <%= submit_tag '検索', class: "btn btn-outline-light btn-sm" %>
  <% end %>
</div>
<table class="table table-borderless table-hover table-light">
  <thead class="thead-light">
    <tr>
      <th>アイテムID</th>
      <th>アイテム名</th>
      <th>価格</th>
      <th>ジャンル</th>
      <th>経験値</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr onclick='window.location="<%= '/admin/items/' + item.id.to_s %>"' role="link">
        <td class="py-4" style="width: 10%">
          <%= item.id %>
        </td>
        <td class="py-4">
          <%= link_to item.name, admin_item_path(item), class:"text-dark" %>
        </td>
        <td class="py-4">
          <%= item.price %>
        </td>
        <td class="py-4">
          <%= item.genre.name %>
        </td>
        <td class="py-4">
          <%= item.having_exp %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="mx-auto">
    <%= paginate @items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>