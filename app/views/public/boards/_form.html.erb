<%= form_with model: obj do |f| %>
  <div class="form-group">
    <div><%= f.label :お題 %><span class="attention ml-2">必須!</span></div>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :タグ %>
    <%= f.text_field :tag_list, value: obj.tag_list.join(','), class:"form-control" %>
  </div>
  <div class="form-group row">
    <%= f.label :画像, class: "col-2" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group text-center">
    <%= f.submit "投稿", class: 'btn btn-outline-light' %>
  </div>
<% end %>
