<div class="text-center mb-2">
  <span class="mr-3 h5">全投稿数：<%= @member.boards.count %></span>
  <span class="ml-3 h5">全お題の答えられた数：<%= @member.boards.inject(0) { |sum, board| sum + board.posts.count } %></span>
</div>

<div class="text-center mb-3">
  <div class="btn-group" role="group">
    <%= link_to "投稿数", member_member_boards_path(sort: "popular"), class: "btn btn-outline-light btn-lg" %>
    <%= link_to "最新", member_member_boards_path(sort: 'created_at DESC'), class: "btn btn-outline-light btn-lg" %>
  </div>
</div>
<div class="text-center my-2"><%= link_to "プロフィールへ", member_path(@member), class: "btn btn-info btn-sm" %></div>
<% if @boards.any? %>
  <% @boards.each do |board| %>
    <div class="box mb-3">
      <%= render "public/boards/show", board: board %>
    </div>
  <% end %>

  <div class="row">
    <div class="mx-auto">
      <%= paginate @boards, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
<% else %>
  <div class="text-center">
    <p>まだ投稿がありません　<i class="fas fa-cat"></i></p>
  </div>
<% end %>