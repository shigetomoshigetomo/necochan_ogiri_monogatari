<div>
  名前<%= @member.name %>
  レベル<%= @member.level %>
  経験値<%= @member.exp %>
  マネー<% if @member.money.to_i > 0 %>
          <%= @member.money %>
        <% else %>
          0
        <% end %>
</div>

<% if @member != current_member %>
  <div>
    <% if current_member.following?(@member) %>
      <%= link_to "フォロー外す", member_relationships_path(@member), method: :delete, class:"btn btn-info btn-sm" %>
    <% else %>
      <%= link_to "フォローする", member_relationships_path(@member), method: :post, class:"btn btn-success btn-sm" %>
    <% end %>
  </div>
<% end %>