<div class="text-center mb-3">
  <h3 class="page-title">ジャンル編集</h3>
</div>
<div class="text-center my-2"><%= link_to "ジャンル一覧へ", admin_genres_path, class: "btn btn-info btn-sm" %></div>
<div class="box row">
  <div class="mx-auto">
    <%= form_with model:@genre, url: admin_genre_path(@genre), method: :patch do |f| %>
      <div class="field form-group">
        <%= f.label :ジャンル名, class:"mr-2" %>
        <%= f.text_field :name, placeholder: "ジャンル名", class:"genre-form" %>
        <%= f.submit "更新", class:"btn btn-outline-light btn-lg ml-3" %>
      </div>
    <% end %>
  </div>
</div>