<div class="row mx-5">
  <table class="table mx-5 table-borderless col-6">
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @member.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @member.name %></td>
      </tr>
      <tr>
        <td>レベル</td>
        <td><%= @member.level %></td>
      </tr>
      <tr>
        <td>経験値</td>
        <td><%= @member.exp %></td>
      </tr>
      <tr>
        <td>マネー</td>
        <td><%= @member.money %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @member.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @member.active_for_authentication? %>
            <b class="text-success">有効</b>
          <% else %>
            <b class="text-muted">退会</b>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<%= link_to "編集する", edit_admin_member_path(@member), class: "btn btn-success mr-3" %>