<div class="text-center my-2"><%= link_to "会員一覧へ", admin_members_path, class: "btn btn-info btn-sm" %></div>
<div class="box row">
  <div class="col-lg-4 text-center">
    <%= image_tag @member.get_profile_image(300) %>
  </div>
  <table class="table table-borderless text-white col-lg-7 offset-lg-1">
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @member.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @member.name %></td>
      </tr>
      <tr>
        <td>レベル</td>
        <td><%= @member.level %></td>
      </tr>
      <tr>
        <td>経験値</td>
        <td><%= @member.exp %></td>
      </tr>
      <tr>
        <td>マネー</td>
        <td><%= @member.money %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @member.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @member.active_for_authentication? %>
            <b class="text-success">有効</b>
          <% else %>
            <b class="text-white">退会</b>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<div class="row mt-5">
  <%= link_to "編集する", edit_admin_member_path(@member), class: "btn btn-outline-light btn-lg mx-auto" %>
</div>