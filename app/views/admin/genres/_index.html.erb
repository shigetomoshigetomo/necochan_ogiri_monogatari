<table class="table table-light">
  <thead class="thead-light">
    <th>ジャンル名</th>
    <th>商品数</th>
    <th></th>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.items.count %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>